<body>
  <button id="robotBtn">ZAPNÚŤ ROBOTA</button>

  <script>
    let robotOn = false;
    const btn = document.getElementById("robotBtn");

    btn.addEventListener("click", () => {
      robotOn = !robotOn;

      if (robotOn) {
        btn.textContent = "VYPNÚŤ ROBOTA";
        btn.classList.add("off");
        sendCommand("on");
      } else {
        btn.textContent = "ZAPNÚŤ ROBOTA";
        btn.classList.remove("off");
        sendCommand("off");
      }
    });

    function sendCommand(state) {
      console.log("Robot state:", state);

      // PRIPRAVENÉ NA ESP / SERVER
      // fetch("http://IP_ADRESA_ESP/robot?state=" + state)
      //   .catch(err => console.log(err));
    }
  </script>
